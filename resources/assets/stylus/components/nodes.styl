#nodes
	position: absolute
	right: 0
	z-index: 998
	
	background-color: $color_nav_background
	box-shadow: $shadow_boxes
	
	overflow: hidden
	
	.content
		position: absolute
		top: 30px
		left: 30px
			
		font-size: 14px
		line-height: 18px
		font-weight: 400
		
	#target-content
	
		h3
			font-size: 12px
			line-height: 14px
			text-transform: uppercase
			color: $color_h1
			font-weight: 900
			
			margin: 30px 0 15px 0
			padding: 0 0 5px 0
			
			border-bottom: 1px solid $color_h1
			
			&:first-of-type
				margin: 0 0 15px 0
		
		.info-label
			font-size: 10px
			line-height: 12px
			text-transform: uppercase
			color: $color_h2
			font-weight: 900
			
			margin: 10px 0 5px 0
			
		.info-content
			font-size: 14px
			line-height 20px
			color: $color_h1
			font-weight: 400
			
		#target-meshlinks th 
			border-top: none
			
	.wrapper-scroll
		padding: 0 0 20px 0
		
	.trigger:hover
		color: $color_a_hover
		cursor: pointer
	
#nodes__toggle
	position: absolute
	left: 0
	
	font-size: 16px
	
	padding-left: 5px
	padding-right: 5px
	
	&:hover
		background-color: $color_trigger_area_hover
		cursor: pointer
	
	.wrapper		
		display: table-cell
		vertical-align: middle