#controls
	position: absolute
	left: 0
	z-index: 998
	
	background-color: $color_nav_background
	box-shadow: $shadow_boxes
	
	.content
		position: absolute
		top: 15px
		right: 25px
		
		font-size: 12px
		line-height: 18px
		font-weight: 400
		
		hr
			margin: 5px 0 5px 0
		
		div
			padding: 5px
			
			.info
				font-size: 10px
				line-height: 14px
				color: $color_text_info
				
				padding: 0
				margin-bottom: 10px	
		
		.trigger
		
			i 
				padding-right: 5px
		
			&:hover
				background-color: $color_trigger_area_hover
				cursor: pointer
				
		.active
			background-color: $color_active_background
			
		.wrapper-scroll
			padding: 0 0 10px 0
			
		#input-address
			border-radius: 0
		
		#cursor-position
			
			#locked
				font-size: 10px
				line-height: 14px
				color: $color_text_info
				
				margin-top 10px
			
		
	
#controls__toggle
	position: absolute
	right: 0
	
	font-size: 16px
	
	padding-left: 5px
	padding-right: 5px
	
	&:hover
		background-color: $color_trigger_area_hover
		cursor: pointer
	
	.wrapper		
		display: table-cell
		vertical-align: middle