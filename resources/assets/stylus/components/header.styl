#header
	position: absolute
	top: 0
	left: 0
	z-index: 999
	
	background-color: $color_nav_background
	box-shadow: $shadow_boxes
	
	width: 100%
	
	padding-top: 15px
	padding-left: 20px
	padding-bottom: 15px
	padding-right: 20px
	
	@media (max-width: 540px)
		padding-top: 10px
		padding-left: 10px
		padding-bottom: 5px
		padding-right: 10px
	
#header__left
	
	#logo
	
		img
			height: 50px
			width: auto
			
			float: left
			
			padding-right: 15px
			
		@media (max-width: 540px)
			
			img
				height: 30px
			
	h1,
	h2
		font-size: 16px
		line-height: 26px
		font-weight: 900
		color: $color_h1
		
		margin: 0
		
		a,
		a:visited
			color: $color_h1
			text-decoration: none
			
		a:hover,
		a:focus
			color: $color_a_hover
			text-decoration: none
			
		button
			padding: 0
			margin: -2px 5px 0 0
			
			width: 12px
			
			border: none
			
			&:hover
				background-color: none
				color: $color_a_hover
			
	@media (max-width: 540px)
		
		h1,
		h2
			font-size: 12px
			line-height: 16px;
		
	h2
		color: $color_h2
		font-weight: 400
		

#header__right
	float: right
	
	font-size: 12px
	line-height: 20px
	
	padding-top: 7px
	padding-right: 10px